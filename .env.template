# LLM API Configuration
# Copy this file to .env and add your API keys

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4  # or gpt-3.5-turbo, gpt-4-turbo, etc.

# Anthropic Configuration (alternative to OpenAI)
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# ANTHROPIC_MODEL=claude-3-sonnet-20240229  # or claude-3-opus-20240229

# Local/Custom LLM Configuration (alternative to cloud APIs)
# LLM_BASE_URL=http://localhost:8000
# LLM_API_KEY=your_local_api_key
# LLM_MODEL=local-model-name

# LLM Generation Parameters
LLM_MAX_TOKENS=2000
LLM_TEMPERATURE=0.1
LLM_TIMEOUT=60

# Trajectory Optimization Parameters
MAX_LLM_ITERATIONS=10
TRAJECTORY_OPTIMIZATION_TIMEOUT=120

# Logging and Results
LOG_LLM_ITERATIONS=true
SAVE_INTERMEDIATE_RESULTS=true
RESULTS_DIR=results/llm_iterations
